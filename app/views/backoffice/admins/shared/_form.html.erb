
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">

        <%= form_for [:backoffice, @admin] do |f| %>

        <% if @admin.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <% @admin.errors.full_messages.each do |message| %>
              <ul>
                <li><%= message %></li>
              </ul>
            <% end %>
        </div>
        <% end %>


        <div class="col-lg-4">

          <div class="form-group">
            <label for="name">Nome: </label>
            <%= f.text_field :name, class: "form-control", id: "name", placeholder: "Nome" %>
          </div>

          <div class="form-group">
            <label>Email: </label>
            <%= f.email_field :email,  class: "form-control", placeholder: "Ex: teste@dominio.com" %>
          </div>

          <div class="form-group">
            <label>Senha: </label>
            <%= f.password_field :password,  class: "form-control", placeholder: "" %>
          </div>

          <div class="form-group">
            <label>Confirmar senha: </label>
            <%= f.password_field :password_confirmation,  class: "form-control", placeholder: "" %>
          </div>
          <button type="submit" class="btn btn-success">Salvar</button>
        </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
