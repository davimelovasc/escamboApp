<!DOCTYPE html>
<html>
<head>
  <title>EscamboApp</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag    'site/site.css', media: 'all', 'data-turbolinks-track': 'reload' %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'site/site.js', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <%= render partial: "layouts/site_shared/header" %>

  <div class="container-fluid">

    <div class="row">

      <%= render partial: "layouts/site_shared/side_menu" %>

      <%= yield %>

    </div>

  </div>


  <%= render partial: "layouts/site_shared/footer" %>
</body>
</html>
